import java.util.Random;

public class Ascensor {
  private int pisoActual;
  public final int PISO_MAXIMO;
  public final int PISO_MINIMO;
 
// Constructor

 public Ascensor(max 7, min 1) {

// Inicializar el piso actual de forma aleatoria entre 1 y 7.
        Random random = new Random();
        pisoActual = random.nextInt(7) + 1;
    }

    public int getPisoActual() {
        return pisoActual;
    }

    public void moveTo(int pisoDestino) {
        if (pisoDestino < 1 || pisoDestino > 7) {
            System.out.println("Piso no v√°lido. Saliendo del programa.");
            System.exit(0);
        }

        pisoActual = pisoDestino;
    }
}

